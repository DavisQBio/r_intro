#loading growth rate data and plotting it
library(tidyverse)
library(growthrates)
data("bactgrowth")
str(bactgrowth)

p1 <- bactgrowth %>%
  filter(strain == "T") %>%
  ggplot(aes(x=time,y = value))+geom_point()+geom_smooth()
p1

data("antibiotic")
str(antibiotic)
?antibiotic
table(antibiotic$conc)

p2 <- antibiotic %>%
  filter(conc == 0) %>%
  ggplot(aes(x = time, y = value,color=repl))+geom_point()
p2

p3 <- antibiotic %>%
  ggplot(aes(x = time, y = value, color=factor(conc)))+geom_point()
p3

